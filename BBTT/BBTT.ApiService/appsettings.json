{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "crosswordRoute": {
        "ClusterId": "crosswordCluster",
        "Match": {
          "Path": "/crossword/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/crossword"
          }
        ]
      },
      "dataRoute": {
        "ClusterId": "dataCluster",
        "Match": {
          "Path": "/data/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/data"
          }
        ]
      },
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/Auth/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "crosswordCluster": {
        "Destinations": {
          "crosswordDestination": {
            "Address": "http://crosswordapi/",
            "Health": "http://crosswordapi/readiness"
          }
        }
      },
      "dataCluster": {
        "Destinations": {
          "dataDestination": {
            "Address": "http://bbtt-dataapi/",
            "Health": "http://bbtt-dataapi/readiness"
          }
        }
      },
      "authCluster": {
        "Destinations": {
          "authDestination": {
            "Address": "http://bbtt-authapi/",
            "Health": "http://bbtt-authapi/readiness"
          }
        }
      }
    }
  }
}
